{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "strictNullChecks": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
